<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScaleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgScale"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_ghost"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal">
        </ImageView>
        <TextView
            android:id="@+id/txtScale1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:text="Animation Scale with \n\n android:repeatMode=restart \n android:repeatCount=5 \n android:fromXScale=0 \nandroid:toXScale=3 \n android:fromYScale=0 \nandroid:toYScale=3 \nandroid:pivotX=50% \nandroid:pivotY=20% \nandroid:duration=1000"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:gravity="center">
        </TextView>

        <ImageView
            android:id="@+id/imgScale1"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:src="@drawable/cat_sad"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal">
        </ImageView>
        <TextView
            android:id="@+id/txtScale2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:text="Animation Scale with \n\n android:repeatMode=restart \n android:repeatCount=5 \n android:fromXScale=1 \nandroid:toXScale=0 \n android:fromYScale=1 \nandroid:toYScale=0 \nandroid:pivotX=50% \nandroid:pivotY=50% \nandroid:duration=2000"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:gravity="center">
        </TextView>

    </LinearLayout>

</ScrollView>