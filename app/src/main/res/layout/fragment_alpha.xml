<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.alpha.AlphaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgAlpha1"
            android:layout_width="300dp"
            android:layout_height="230dp"
            android:scaleType="fitXY"
            android:src="@drawable/luffy"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal">
        </ImageView>
        <TextView
            android:id="@+id/txtAlpha1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:text="Animation Alpha with \n\n android:repeatMode=reverse \n android:repeatCount=infinity \n android:fromAlpha=1.0\n android:toAlpha=0.1"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:gravity="center">
        </TextView>

        <ImageView
            android:id="@+id/imgAlpha2"
            android:layout_width="300dp"
            android:layout_height="230dp"
            android:scaleType="fitXY"
            android:src="@drawable/luffy"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal">
        </ImageView>
        <TextView
            android:id="@+id/txtAlpha2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:text="Animation Alpha with \n\n android:repeatMode=restart"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:gravity="center">
        </TextView>

        <ImageView
            android:id="@+id/imgAlpha3"
            android:layout_width="300dp"
            android:layout_height="230dp"
            android:scaleType="fitXY"
            android:src="@drawable/luffy"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal">
        </ImageView>
        <TextView
            android:id="@+id/txtAlpha3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:text="Animation Alpha with \n\n android:repeatMode=restart \n android:repeatCount=infinity \n android:fromAlpha=0\n android:toAlpha=1.0"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:gravity="center">
        </TextView>

        <ImageView
            android:id="@+id/imgAlpha4"
            android:layout_width="300dp"
            android:layout_height="230dp"
            android:scaleType="fitXY"
            android:src="@drawable/luffy"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal">
        </ImageView>
        <TextView
            android:id="@+id/txtAlpha4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:text="Animation Alpha with \n\n android:repeatMode=restart \n android:repeatCount=infinity \n android:fromAlpha=0\n android:toAlpha=2.0"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:gravity="center">
        </TextView>

    </LinearLayout>

</ScrollView>